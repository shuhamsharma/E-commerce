<html>
  <head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="password.css">

</head>
<body>
<% if(value=="change_password"){ %>
<% if(error){ %>
<h4><%= error %>
<% } %>
<div class="header">
  
<p style="margin: 0; text-align: left; font-size: larger;" class="cursor"><a href="/" style="color: red;"><i class="fa fa-home" aria-hidden="true"> HOME</i></a></p>
<h1>Change Password</h1>
<hr>
  <form action="/changepass" method="POST" >
    
<div class="box">
<label>New Password</label>
<br>
<input type="text" name="new_pass" placeholder="Enter here"required/>
</div>
<div class="box">
<label>Confirm New Password</label>
<br>
<input type="text" name="cnew_pass" placeholder="Enter here"required/>
</div>
    <input type="submit" value="submit" class="submit">
    </form>
</div>
<% }else if(value=="forgot_password"){ %>
<div class="header">
  <p style="color:red"><%= error %></p>
<h1>Forgot Password</h1>
<hr>  
<br>  
<br>
<form action="/forgot_password" method="POSt">
  <div class="box" style="margin-top: 0;">
<label>Mail</label>
<br>
<input type="mail" name="mail" placeholder="Enter here...." id="input_mail" required/>
<br>
<br>
<br>
<br>
<input type="submit" value="submit" class="submit" style="width:8rem;padding:10px 15px;">
<!-- <button class="submit" onclick="forgot_password()">Submit</button> -->
</div>
</form>
</div>
<% } %>
<script src="password.js" type="text/javascript"></script>
</body>
</html>
